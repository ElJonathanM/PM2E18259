<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM2E18259.MainPage">
    

    <StackLayout>
        <Image Margin="10,5,10,5" x:Name="foto" Source="{Binding imageC}"  HeightRequest="200" BackgroundColor="BurlyWood" />
        <Button x:Name="TomarFoto" Text="Tomar Fotografía" Clicked="TomarFoto_Clicked" FontSize="Body" BackgroundColor="GreenYellow"/>
        <Button x:Name="Galeria" Text="Agregar Fotografía" Clicked="Galeria_Clicked" FontSize="Body" BackgroundColor="GreenYellow"/>
        <Label x:Name="lblCod" Text="{Binding id}"/>
        <Label x:Name="lblLat" Text="{Binding latitudC}"/>
        <Label x:Name="lblLon" Text="{Binding longitudC}"/>
        <Entry x:Name="txtDes" Text="{Binding descripcionC}" Placeholder="Ingrese su descripción"/>

        <Button x:Name="Agregar" Text="Agregar" Clicked="Agregar_Clicked"/>
        <Button x:Name="Lista" Text="Lista" Clicked="Lista_Clicked"/>
        <Button x:Name="Eliminar" Text="Eliminar" Clicked="Eliminar_Clicked"/>
        <Button x:Name="Salir" Text="Salir Aplicación" Clicked="Salir_Clicked"/>

    </StackLayout>

</ContentPage>
